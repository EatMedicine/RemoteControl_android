<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_listView_item_height"
    android:gravity="center_vertical"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/shadow"
    >

    <TextView
        android:id="@+id/item_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_listView_item_textMargin"
        android:textSize="@dimen/main_listView_item_textSize"
        android:textColor="@color/colorItemText"
        />
</LinearLayout>