<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/colorTitle"
        android:gravity="center_vertical"
        android:scrollbars="none"
        android:fadeScrollbars="false"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/main_titleMargin"
            android:textSize="@dimen/main_titleTextSize"
            android:textColor="@color/colorTitleText"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/btn_titleAdd"
            android:layout_width="@dimen/main_titleBtnSize"
            android:layout_height="@dimen/main_titleBtnSize"
            android:layout_marginRight="10dp"
            android:background="@drawable/addbtn"
            android:layout_alignParentRight="true"

            />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainActivity"
        tools:showIn="@layout/activity_main"
        >

        <ListView
            android:id="@+id/listView_Client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_listView_margin"
            android:dividerHeight="@dimen/main_listView_item_margin"
            android:divider="@color/colorListViewTransparent"
            >

        </ListView>

    </LinearLayout>


</LinearLayout>